generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transcript {
  id          String   @id @default(cuid())
  title       String
  content     String
  audioUrl    String?
  duration    Float    // in seconds
  wordCount   Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Timestamp data stored as JSON
  timestamps  String?  // JSON array of {time, word}
  
  // Cost tracking
  provider    String   // openai, anthropic, etc.
  model       String   // gpt-4, claude-3, etc.
  cost        Float    @default(0)
  
  // Search optimization
  searchVector String? // For full-text search
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   // JSON string for complex values
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SearchHistory {
  id          String   @id @default(cuid())
  query       String
  resultsCount Int
  createdAt   DateTime @default(now())
}

model Analytics {
  id              String   @id @default(cuid())
  date            DateTime @default(now())
  
  // Transcript stats
  totalTranscripts Int     @default(0)
  totalWords      Int     @default(0)
  totalDuration   Float   @default(0) // in seconds
  
  // Cost tracking
  totalCost       Float   @default(0)
  
  // Provider breakdown (JSON)
  providerStats   String?  // {openai: {cost: 0, count: 0}, ...}
  
  @@unique([date])
}
